<div>
    <h1 class="text-center mb-3">Login</h1>
    <form method="post" action="/Admin/SignIn" class="w-25 mx-auto">
        <div class="input-group">
            <label class="input-group-text">Username</label>
            <input class="form-control" name="username" value="@ViewBag.Username" />
        </div>
        <div class="input-group mt-3">
            <label class="input-group-text">Password</label>
            <input class="form-control" name="password" type="password" value="@ViewBag.Password" />
        </div>
        <div class="d-flex justify-content-center">
            <button type="submit" class="btn btn-primary mt-4 ms-2">Sign In</button>
        </div>

        @await Html.PartialAsync("ErrorsBlock")
    </form>
</div>