
<div>
    <h1 class="text-center">Зарегистрироваться</h1>
    <form method="post" action="/Admin/Register" class="w-25 mx-auto">
        <div class="form-group">
            <label>Имя пользователя:</label>
            <input class="form-control" name="username" value="@ViewBag.Username" />
        </div>
        <div class="form-group mt-1">
            <label>Пароль:</label>
            <input class="form-control" type="password" name="password" value="@ViewBag.Password" />
        </div>
        <button type="submit" class="btn btn-primary mt-4">Зарегистрироваться</button>

        @await Html.PartialAsync("ErrorsBlock")
    </form>
</div>